<div class="container-fluid">
    <h3>{{title}}</h3>

    <div class="table-wrapper-scroll-y dataGrid" id="dataGrid"></div>

    <script>
        let htmlTable = "<table class='table table-sm table-bordered table-striped table-hover mb-0'>";
        let price;
        htmlTable += "<thead>";
        htmlTable += "<tr>";
        htmlTable += "<th scope='col'>Họ tên khách hàng</th>";
        htmlTable += "<th scope='col'>Giới tính</th>";
        htmlTable += "<th scope='col'>Ngày sinh</th>";
        htmlTable += "<th scope='col'>Số điện thoại</th>";
        htmlTable += "<th scope='col'>Địa chỉ liên hệ</th>";
        htmlTable += "<th scope='col'>Ngày đặt</th>";
        htmlTable += "<th scope='col'>Đặt phòng đơn</th>";
        htmlTable += "<th scope='col'>Thành tiền</th>";
        htmlTable += "<th scope='col'>Ghi chú</th>";
        htmlTable += "</tr>";
        htmlTable += "</thead>";

        htmlTable += "<tbody>";
        {{#if tourBookingDetails.length}}
            {{#each tourBookingDetails}}

                htmlTable += "<tr>";
                htmlTable += "<td>{{this.customer_name}}</td>";
                htmlTable += "<td>{{this.customer_gender}}</td>";
                htmlTable += "<td>{{this.customer_dob}}</td>";
                htmlTable += "<td>{{this.customer_phone}}</td>";
                htmlTable += "<td>{{this.customer_address}}</td>";
                htmlTable += "<td>{{this.booking_date}}</td>";

                if({{this.booking_single_room}} == 1){
                    htmlTable += "<td>Có</td>";
                }
                else{
                    htmlTable += "<td>Không</td>";
                }

                htmlTable += "<td>{{this.price}}</td>";
                htmlTable += "<td>{{this.customer_note}}</td>";

                htmlTable += "</tr>";
            {{/each}}
        {{else}}
            htmlTable += "<tr><td class='noData' colspan='14'>Không có dữ liệu</td></tr>";
        {{/if}}
        htmlTable += "</tbody>";
        htmlTable += "</table>";

        htmlTable += "<button class='btn btn-info' id='btn-back'>Trở về</button>";

        document.getElementById("dataGrid").innerHTML = htmlTable;
    </script>

    <script>
        // handling onclick event button
        document.getElementById("btn-back").onclick = function () {
            location.href = "/manage/tourBooking";
        };
    </script>
</div>
