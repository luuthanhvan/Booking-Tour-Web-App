<div class="container-fluid">
    <h3>Nhập thông tin tour</h3>
    <form action="/manage/tour">
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label>Mã tour</label>
                <input type="text" class="form-control" name="tourId" required>
            </div>

            <div class="col-md-6 mb-3">
                <label>Tên tour</label>
                <input type="text" class="form-control" name="tourName" required>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label>Giá tour</label>
                <input type="text" class="form-control" name="tourPrice" required>
            </div>
            <div class="col-md-3 mb-3">
                <label>Số lượng khách tối đa</label>
                <select class="custom-select" name="maxTourist" required>
                  <option>25 người</option>
                  <option>30 người</option>
                  <option>35 người</option>
                </select>
            </div>
            <div class="col-md-3 mb-3">
                <label>Số lượng khách tối thiểu</label>
                <select class="custom-select" name="minTourist" required>
                    <option>20 người</option>
                    <option>15 người</option>
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="col">
                <label>Ngày đi</label>
                <input type="text" class="form-control" name="dateGo" placeholder="dd/mm/yyyy" required>
            </div>
            <div class="col">
                <label>Ngày về</label>
                <input type="text" class="form-control" name="dateBack" placeholder="dd/mm/yyyy" required>
            </div>
            <div class="col">
                <label>Giờ khởi hành</label>
                <input type="text" class="form-control" name="timeGo" placeholder="hh:mm:ss" required>
            </div>
            <div class="col">
                <label>Địa điểm xuất phát</label>
                <select class="custom-select" name="destStart" required>
                    <option>...</option>
                    <option>...</option>
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="col">
                <label>Địa điểm tham quan</label>
                <select class="custom-select" name="touristDest" multiple required>
                    <option>...</option>
                    <option>...</option>
                    <option>...</option>
                    <option>...</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label>Mô tả</label>
            <textarea class="form-control" name="description" rows="10"></textarea>
        </div>
    </form>
</div>
